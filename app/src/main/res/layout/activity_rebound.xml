<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReboundActivity">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/acImg_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_error"
        android:padding="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <!--第一行-->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/acImg_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/acImg_two"
            android:src="@mipmap/ic_launcher_round"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/acImg_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/acImg_one"
            app:layout_constraintRight_toLeftOf="@+id/acImg_three"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/acImg_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/acImg_two"
            app:layout_constraintRight_toLeftOf="@+id/acImg_four"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/acImg_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/acImg_three"
            app:layout_constraintRight_toRightOf="parent"/>

        <!--第二行-->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/acImg_five"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/acImg_one"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/acImg_six"
            android:src="@mipmap/ic_launcher_round"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/acImg_six"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/acImg_two"
            app:layout_constraintLeft_toRightOf="@+id/acImg_five"
            app:layout_constraintRight_toLeftOf="@+id/acImg_seven"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/acImg_seven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/acImg_three"
            app:layout_constraintLeft_toRightOf="@+id/acImg_six"
            app:layout_constraintRight_toLeftOf="@+id/acImg_eight"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/acImg_eight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/acImg_four"
            app:layout_constraintLeft_toRightOf="@+id/acImg_seven"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>